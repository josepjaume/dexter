#!/usr/bin/env ruby

$LOAD_PATH.unshift File.dirname(__FILE__) + '/../lib'

require 'trollop'
require 'dexter'

opts = Trollop::options do
  opt :input, "Input directory", :default => "."
  opt :output, "Output directory", :default => "."
  opt :format, "Output directory format"
end

Dexter.organize_all!(opts[:input],opts[:output])
Dexter::Matchers::Video.format = opts[:format] if opts[:format]
